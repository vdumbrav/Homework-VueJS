{
  "printWidth": 120,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "ignore",
  "trailingComma": "all",
  "quoteProps": "consistent",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "trailingComma": "none",
        "printWidth": 120
      }
    },
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 80,
        "parser": "json",
        "proseWrap": "preserve"
      }
    }
  ]
}
